@model IEnumerable<DM.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Column rendering --> <!-- DOM / jQuery events -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">All User Information</h4>
                    <h6 class="card-subtitle"></h6>
                    <div class="table-responsive">
                        <table id="dom_jq_event" class="table table-striped table-bordered display" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Role ID</th>
                                    <th>Admin ID</th>
                                    <th>E-mail</th>
                                    <th>Phone</th>
                                    <th>Image</th>
                                    <th>Address</th>
                                    <th>Status</th>
                                    <th>---Action---</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Role_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Admin_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        <img src="../assets/images/em.jpg" alt="" width="100px">
                                    </td>
                                    <td>Dhaka</td>
                                    <td>
                                        <a href="#"><span class="label label-table label-info">inactive</span></a>
                                    </td>
                                    <td>
                                        @*<a href="#"><span class="label label-table label-success">Edit</span></a>*@


                                        @Html.ActionLink("Edit", "Edit", "Users", new { id = item.Id }, new { @class = "label label-table label-success" })

                                        @* <a href="/Users/Index"><input type="submit" value="Delete" class="label label-table label-danger" /></a>*@

                                        @*@Html.HiddenFor(id => item.Id)*@
                                        @Html.ActionLink("Delete", "Delete", "Users", new { id = item.Id }, new { @class = "label label-table label-danger" })



                                        <!-- <a href="#"><span class="label label-table label-danger">Delete</span></a>-->
                                    </td>
        </tr>

        }
        </tbody>
    <tfoot>
        
    </tfoot>
</table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End row -->
</div>
